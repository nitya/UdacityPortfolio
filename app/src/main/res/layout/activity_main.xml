<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:clickable="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Nanodegree Apps!"
        android:id="@+id/titleText"
        android:layout_gravity="center_horizontal"
        android:textSize="12pt"
        android:layout_marginBottom="10pt"
        android:layout_marginTop="5pt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spotify Streamer"
        android:id="@+id/launchSpotify"
        android:layout_gravity="center_horizontal"
        android:background="#ff536dfe"
        android:padding="6pt"
        android:layout_margin="3pt"
        android:textSize="8pt"
        android:width="120pt"
        android:clickable="true"
        android:onClick="showToast" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scores App"
        android:id="@+id/launchScores"
        android:layout_gravity="center_horizontal"
        android:background="#ff536dfe"
        android:padding="6pt"
        android:layout_margin="3pt"
        android:textSize="8pt"
        android:width="120pt"
        android:clickable="true"
        android:onClick="showToast" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Library App"
        android:id="@+id/launchLibrary"
        android:layout_gravity="center_horizontal"
        android:background="#ff536dfe"
        android:padding="6pt"
        android:layout_margin="3pt"
        android:textSize="8pt"
        android:width="120pt"
        android:clickable="true"
        android:onClick="showToast" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Build It Bigger"
        android:id="@+id/launchBuild"
        android:layout_gravity="center_horizontal"
        android:background="#ff536dfe"
        android:padding="6pt"
        android:layout_margin="3pt"
        android:textSize="8pt"
        android:width="120pt"
        android:clickable="true"
        android:onClick="showToast" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XYZ Reader"
        android:id="@+id/launchXYZ"
        android:layout_gravity="center_horizontal"
        android:background="#ff536dfe"
        android:padding="6pt"
        android:layout_margin="3pt"
        android:textSize="8pt"
        android:width="120pt"
        android:clickable="true"
        android:onClick="showToast" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capstone: My Own App"
        android:id="@+id/launchCapstone"
        android:layout_gravity="center_horizontal"
        android:background="#ffc2185b"
        android:padding="6pt"
        android:layout_margin="3pt"
        android:textSize="8pt"
        android:textColor="#ffffff"
        android:width="120pt"
        android:clickable="true"
        android:onClick="showToast" />
</LinearLayout>
