<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:clickable="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/label_title"
        android:id="@+id/titleText"
        android:layout_gravity="center_horizontal"
        android:textSize="12pt"
        android:layout_marginBottom="10pt"
        android:layout_marginTop="5pt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_spotify"
        android:id="@+id/launchSpotify"
        android:layout_gravity="center_horizontal"
        android:background="@color/material_indigo"
        android:padding="6pt"
        android:layout_margin="3pt"
        android:textSize="8pt"
        android:width="120pt"
        android:clickable="true"
        android:onClick="showToast" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_scores"
        android:id="@+id/launchScores"
        android:layout_gravity="center_horizontal"
        android:background="@color/material_indigo"
        android:padding="6pt"
        android:layout_margin="3pt"
        android:textSize="8pt"
        android:width="120pt"
        android:clickable="true"
        android:onClick="showToast" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_library"
        android:id="@+id/launchLibrary"
        android:layout_gravity="center_horizontal"
        android:background="@color/material_indigo"
        android:padding="6pt"
        android:layout_margin="3pt"
        android:textSize="8pt"
        android:width="120pt"
        android:clickable="true"
        android:onClick="showToast" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_build"
        android:id="@+id/launchBuild"
        android:layout_gravity="center_horizontal"
        android:background="@color/material_indigo"
        android:padding="6pt"
        android:layout_margin="3pt"
        android:textSize="8pt"
        android:width="120pt"
        android:clickable="true"
        android:onClick="showToast" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_xyz"
        android:id="@+id/launchXYZ"
        android:layout_gravity="center_horizontal"
        android:background="@color/material_indigo"
        android:padding="6pt"
        android:layout_margin="3pt"
        android:textSize="8pt"
        android:width="120pt"
        android:clickable="true"
        android:onClick="showToast" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_capstone"
        android:id="@+id/launchCapstone"
        android:layout_gravity="center_horizontal"
        android:background="@color/material_pink"
        android:padding="6pt"
        android:layout_margin="3pt"
        android:textSize="8pt"
        android:textColor="@android:color/white"
        android:width="120pt"
        android:clickable="true"
        android:onClick="showToast" />
</LinearLayout>
